{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "PVU Marketplace Assistent",
    "description": "Simple Assistent for Plant vs Undead Game",
    "author": "Daniel Queiroz de Pontes",

    "browser_action": {
   	 "default_icon": "icon.png"
    },

    "web_accessible_resources" : [
      "images/*.png"
    ],

    "permissions": [ "activeTab", "declarativeContent", "storage", "tabs", "alarms", "debugger", "https://*.plantvsundead.com/" ],

    "content_scripts": [
      {
        "matches": [
          "https://marketplace.plantvsundead.com/", "https://marketplace.plantvsundead.com/"
        ],
        "js": ["jquery-2.1.3.min.js", "on_load_page_script.js", "content_injection.js"]
      }
    ],

    "background": {
      "persistent": true,
      "scripts": ["background.js"]
    }

}

